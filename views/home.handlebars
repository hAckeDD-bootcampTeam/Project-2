{{!-- New Project Modal --}}
<div class="modal fade" id="add-project-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content heading-font p-2">
            <div class="modal-header text-center">
                <h5 class="modal-title w-100 font-weight-bold">Time to share that good idea!</h5>
