                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="far fa-lightbulb m-2 text-secondary"></i>
                    </span>
                    <input id="new-proj-name" type="text" class="form-control" placeholder="Project Name" required="required">
                </div>
            </div>
